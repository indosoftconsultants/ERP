@model ERP.Models.DepartmentMasterModel

@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<hr />
<div class="col-lg-6 grid-margin stretch-card" style="margin-left:20%">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-10">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="DepartmentName" class="control-label"></label>
                            <input asp-for="DepartmentName" class="form-control" />
                            <span asp-validation-for="DepartmentName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-icon-text btn-sm rounded-0">
                                <i class="ti-file btn-icon-prepend"></i>
                                Submit
                            </button>
                            &nbsp;
                            <button id="ToastNotification" type="button" class="btn btn-dark btn-sm rounded-0" onclick="location.href='@Url.Action("Index", "Department")'">Back</button>
                        </div>
                    </form>
                </div>
            </div>
         </div>
     </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

